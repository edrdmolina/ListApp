<% layout('layouts/boilerplate') -%>

<h1>SHOW ITEMS OF LIST</h1>

<h2><%= list.title %></h2>
<form action="/lists/<%= list.id %>?_method=DELETE" method="POST">
    <button type="submit" class="btn btn-danger">DELETE LIST</button>
</form>

<div class="container">
    <!-- TOP ITEM SUBMIT FORM -->
    <div class="row">
        <div class="col">
            <form action="/lists/<%= list._id %>" method="POST">
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label for="title" class="form-label">Item</label>
                            <input type="text" id="title" name="title" class="form-control">
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label for="quantity" class="form-label">Qty</label>
                            <input type="number" id="quantity" name="quantity" class="form-control" value="1" min="1" step="1">
                        </div>
                    </div>
                    <div class="col">
                        <button type="submit" class="btn btn-primary">Add</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <!-- LIST OF ITEMS -->
        <% for(let item of list.items) { %> 
        <div class="row">
            <div class="col">
                <p><%= item.title %></p>
            </div>
            <div class="col">
                <p><%= item.quantity %></p>
            </div>
            <div class="col">
                <button class="btn btn-danger">
                    <a href="/lists/<%= list._id %>/<%= item._id %>">DELETE</a>
                </button>
            </div>
        </div>
        <% } %>
    <!-- BOTTOM ITEM SUBMIT FORM -->
    <div class="row">
        <div class="col">
            <form action="/lists/<%= list._id %>" method="POST">
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label for="title" class="form-label">Item</label>
                            <input type="text" id="title" name="title" class="form-control">
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label for="quantity" class="form-label">Qty</label>
                            <input type="number" id="quantity" name="quantity" class="form-control" value="1" min="1" step="1">
                        </div>
                    </div>
                    <div class="col">
                        <button type="submit" class="btn btn-primary">Add</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
