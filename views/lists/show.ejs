<% layout('layouts/boilerplate') -%>

<h1>SHOW ITEMS OF LIST</h1>

<h2><%= list.title %></h2>
<form action="/lists/<%= list.id %>?_method=DELETE" method="POST">
    <button type="submit" class="btn btn-danger">DELETE LIST</button>
</form>

<div class="container">
    <!-- TOP ITEM SUBMIT FORM -->
    <div class="row">
        <div class="col">
            <form action="/lists/<%= list._id %>" method="POST">
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label for="title" class="form-label">Item</label>
                            <input type="text" id="title" name="title" class="form-control">
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label for="quantity" class="form-label">Qty</label>
                            <input type="number" id="quantity" name="quantity" class="form-control" value="1" min="1" step="1">
                        </div>
                    </div>
                    <div class="col">
                        <button type="submit" class="btn btn-primary">Add</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <!-- LIST OF ITEMS -->
    <form action="/lists/<%= list._id %>?_method=PUT" method="POST">
        <% list.items.forEach(function(item, i) { %> 
        <div class="row border-bottom">
            <div class="col">
                <p><%= item.title %></p>
            </div>
            <div class="col">
                <p><%= item.quantity %></p>
            </div>
            <div class="col">
                <input type="checkbox" name="deleteItems" id="item<%= i %>" value="<%= item._id %>">
            </div>
        </div>
        <% }); %>
        <button type="submit" class="btn btn-secondary">Delete checked off items</button>
    </form>
    <!-- BOTTOM ITEM SUBMIT FORM -->
    <div class="row">
        <div class="col">
            <form action="/lists/<%= list._id %>" method="POST">
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label for="titleBottom" class="form-label">Item</label>
                            <input type="text" id="titleBottom" name="title" class="form-control">
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label for="quantityBottom" class="form-label">Qty</label>
                            <input type="number" id="quantityBottom" name="quantity" class="form-control" value="1" min="1" step="1">
                        </div>
                    </div>
                    <div class="col">
                        <button type="submit" class="btn btn-primary">Add</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
