<% layout('layouts/boilerplate') -%>

<div class="lists-container">
    <% for(let list of lists) { %>
    <a class="lists-link" href="/lists/<%= list._id %> "> 
        <div class="box m-3 shadow rounded-lg">
            <h4 class="text-center list-title"><%= list.title.toUpperCase() %></h4>
            <ul class="mt-3">
                <% for(let item of list.items) { %> 
                <li class="my-2 text-white">
                    <h6><%= item.title %></h6>
                </li>
                <% } %> 
            </ul>
        </div>
    </a>
    <% } %>
    <a class="lists-link" href="/lists/new">
        <div class="box m-3 shadow rounded-lg">
            <h4 class="list-title text-center">New list</h4>
            <div class="row justify-content-center mt-4">
                <div class="col-6">
                    <i class="far fa-plus-square fa-7x"></i>
                </div>
            </div>
        </div>
    </a>
</div>
